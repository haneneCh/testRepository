<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".view.PurchaseActivity">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="50dp">

      <ImageView
          android:id="@+id/image_brand"
          android:layout_width="156dp"
          android:layout_marginRight="10dp"
          android:layout_height="150dp"
          android:scaleType="fitXY" />

      <TextView
          android:id="@+id/txt_brand"
          android:layout_marginTop="70dp"
          android:layout_width="250dp"
          android:layout_height="39dp"
          android:text="helooooooo"
          android:textSize="30dp"
          android:textFontWeight="100"/>
  </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/txt_ca"
            android:layout_width="321dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="Chiffre d'affaire: 400   €" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txt_vente"
            android:layout_width="326dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="Commission: 100  €" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/txt_commission"
            android:layout_width="325dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text=" Nombre de vente: 13" />
    </androidx.cardview.widget.CardView>


</LinearLayout>